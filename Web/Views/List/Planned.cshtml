@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model MovieNight.Models.List.ListViewModel

@{
    ViewBag.Title = "Planned List";
    ViewBag.JumbotronTitle = "Planned";
    ViewBag.JumbotronSubTitle = "Suggestions for the next movie night";
}

<div class="row">
    @foreach (var item in Model.PlannedSubmissions) {
        <div class="col-lg-4 col-md-6 col-12">
            <div class="card mb-3">
                <a href="@item.Url" target="_blank">
                    <img alt="..." src="@item.ImageUrl" class="card-img-top"/>
                </a>
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <hr/>

                    <table class="table table-borderless table-xs mb-0">
                        <tbody>
                        <tr>
                            <td>Score</td>
                            <td>
                                <small>@item.Score</small>
                            </td>
                        </tr>
                        <tr>
                            <td>Duration</td>
                            <td>
                                <small>@item.Duration</small>
                            </td>
                        </tr>
                        <tr>
                            <td>Rating</td>
                            <td>
                                <small>@item.Rating</small>
                            </td>
                        </tr>
                        <tr>
                            <td>Genres</td>
                            <td>
                                <small>@item.Genres</small>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <hr/>
                    <small class="text-muted">Suggested by @item.User.Username</small>
                </div>

                <div class="row no-gutters">
                    <div class="col">
                        <form asp-controller="List" asp-action="Vote">
                            <input asp-for="Id" type="hidden" value="@item.Id"/>
                            <input asp-for="Vote" type="hidden" value="True"/>

                            <button type="submit" class="btn btn-block" asp-if-class-btn-success="item.UserHasVotedFor"
                                    asp-if-class-btn-light="!item.UserHasVotedFor"
                                    asp-disable="@(HttpContextAccessor.HttpContext.Session.GetString("username") == null)">
                                <i class="fa fa-thumbs-up mr-2"></i>
                                @if (item.UpVotes > 0) {
                                    <span class="badge">@item.UpVotes</span>
                                }
                            </button>
                        </form>
                    </div>
                    <div class="col">
                        <form asp-controller="List" asp-action="Vote">
                            <input asp-for="Id" type="hidden" value="@item.Id"/>
                            <input asp-for="Vote" type="hidden" value="@false"/>

                            <button type="submit" class="btn btn-block" asp-if-class-btn-danger="item.UserHasVotedAgainst"
                                    asp-if-class-btn-light="!item.UserHasVotedAgainst"
                                    asp-disable="@(HttpContextAccessor.HttpContext.Session.GetString("username") == null)">
                                <i class="fa fa-thumbs-down mr-2"></i>
                                @if (item.DownVotes > 0) {
                                    <span class="badge">@item.DownVotes</span>
                                }
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>